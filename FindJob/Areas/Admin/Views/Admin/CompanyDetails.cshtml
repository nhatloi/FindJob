    <!-- CSS Files -->
    <link href="../assets/css/material-dashboard.css?v=2.1.2" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="../assets/demo/demo.css" rel="stylesheet" />
</head>

<body class="">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Details</h4>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <div class="">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Name Company</label>
                                        <input type="text" class="form-control" value="@Model.TenCty" disabled>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">User Name</label>
                                            <input type="text" class="form-control" value="@Model.TaiKhoan" disabled>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Email address</label>
                                            <input type="email" class="form-control" value="@Model.Email" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">specialization</label>
                                            <input type="text" class="form-control" value="@Model.LinhVuc" disabled>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Location</label>
                                            <input type="text" class="form-control" value="@(string.IsNullOrEmpty(Model.MaKV.ToString())?"Chưa chọn" : Model.KhuVuc.TenKhuVuc)" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Adress</label>
                                            <input type="text" class="form-control" value="@Model.DiaChi" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Website</label>
                                            <input type="text" class="form-control" value="@Model.Website" disabled>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Phone</label>
                                            <input type="text" class="form-control" value="@Model.DienThoai" disabled>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">State</label>
                                            <input type="text" class="form-control" value="@(Model.TrangThai==1?"Active":"Block")">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>About Me</label>
                                            <div class="form-group">
                                                @if (!string.IsNullOrEmpty(Model.MoTa))
                                                {
                                                    @Html.Raw(Model.MoTa.ToString().Replace("\n", "<br>"))
                                                }else
                                                    {
                                                        <h2>No data</h2>
                                                    }
                                            </>
                                        </div>
                                    </div>
                                </div>
                                <input name="id" value="@Model.MaCTy" type="hidden" />
                                <input name="update" value="@(Model.TrangThai==0?1:0)" type="hidden" />
                                <button type="submit" class="btn btn-primary pull-right">@(Model.TrangThai==1?"Block":"Active")</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card card-profile">
                        <div class="card-avatar">
                            <a href="javascript:;">
                                <img class="img" src="~/assets/img/icon/@Model.Logo" />
                            </a>
                        </div>
                        <div class="card-body" style="">
                            <img  style="height:100%;width:100%" src="~/assets/img/banner/@Model.Background"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
