    <!-- CSS Files -->
    <link href="../assets/css/material-dashboard.css?v=2.1.2" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="../assets/demo/demo.css" rel="stylesheet" />
</head>

<body class="">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Details</h4>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <div class="">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Name Company</label>
                                        <input type="text" class="form-control" value="@Model.CONGTY.TenCty" disabled>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Position</label>
                                            <input type="text" class="form-control" value="@Model.ViTriLamViec" disabled>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Time</label>
                                            <input type="email" class="form-control" value="@Model.KieuCV" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">specialization</label>
                                            <input type="text" class="form-control" value="@(string.IsNullOrEmpty(Model.MaNganh.ToString())?"Null":Model.NganhNghe.TenNganh)" disabled>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Location</label>
                                            <input type="text" class="form-control" value="@Model.CONGTY.KhuVuc.TenKhuVuc" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Salary</label>
                                            <input type="text" class="form-control" value="@Model.LuongToiThieu - @Model.LuongToiDa $" disabled>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">work experience</label>
                                            <input type="text" class="form-control" value="@Model.KinhNghiem" disabled>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Date post</label>
                                            <input type="text" class="form-control" value="@Model.NgayDangTin" disabled>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Deadline</label>
                                            <input type="text" class="form-control" value="@Model.HanNopHoSo">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>About Work</label>
                                            <div class="form-group">
                                                @Html.Raw(Model.MoTa.ToString().Replace("\n", "<br>"))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Job requirements</label>
                                            <div class="form-group">
                                                @Html.Raw(Model.YeuCauCV.ToString().Replace("\n", "<br>"))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <input name="id" value="@Model.MaTin" type="hidden" />
                                <input name="update" value="@(Model.TrangThai==0?1:0)" type="hidden" />
                                <button type="submit" class="btn btn-primary">@(Model.TrangThai==1?"Block":"Active")</button>
                                <a class="btn btn-warning" href="@Url.Action("FeedBackPost","Admin",new {id = Model.MaTin})">Feedback</a>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

