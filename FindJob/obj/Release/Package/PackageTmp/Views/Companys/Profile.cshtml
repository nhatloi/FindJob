@model FindJob.Models.CONGTY

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}

<h2>Profile</h2>

@using (Html.BeginForm("Profile", "Companys", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaCTy)

        <div class="form-group">
            <label class="control-label col-md-2">Tên Công ty</label>
            <div class="col-md-10">
                <input class="form-control" value="@Model.TenCty" name="TenCty" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Lĩnh vực hoạt động</label>
            <div class="col-md-10">
                <input class="form-control" value="@Model.LinhVuc" name="LinhVuc" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Khu vực hoạt động</label>
            <div class="col-md-10">
                @Html.DropDownList("KhuVuc")
            </div>
        </div>

        <div class="">
            <label class="control-label col-md-2">LoGo công ty</label>
            <div>
                <img style="height:100px" src="~/assets/img/icon/@Model.Logo" />
                <input type="file" name="sLogo" accept=".jpg,.jpeg,.png" onchange="validateFileType(this)"/>
            </div>
        </div>

        <div class="">
            <label class="control-label col-md-2">Banner công ty</label>
            <div style="width:70vw">
                <img style="height:400px;width:100%" src="~/assets/img/banner/@Model.Background" />
            </div>
            <input type="file" name="sBG" accept=".jpg,.jpeg,.png" onchange="validateFileType(this)"/>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Website đại diện</label>
            <div class="col-md-10">
                <input class="form-control" value="@Model.Website" name="Website" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control" value="@Model.Email" name="Email" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ</label>
            <div class="col-md-10">
                <input class="form-control" value="@Model.DiaChi" name="DiaChi" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Điện thoại</label>
            <div class="col-md-10">
                <input class="form-control" value="@Model.DienThoai" name="DienThoai" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giới thiệu công ty</label>
            <div class="col-md-10">
                <textarea class="form-control" name="Mota" rows="15">@Model.MoTa</textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">
    function validateFileType(file) {
        var fileTypes = [".jpg", ".png",".jpeg"];
        var filePath = file.value;
        if (filePath) {
            var fileType = filePath.slice(filePath.indexOf(".")); //Select the format of the file
            var fileSize = file.files[0].size; //Select the file size
            if(fileTypes.indexOf(fileType) == -1) { //Determine whether the file format meets the requirements
                alert("File format does not meet the requirements!");
                return;
            }
            if (fileSize > 500 * 500) {
                alert("File size cannot exceed 500 x 500!");
                return;
            }
        }
    }
</script>