@model FindJob.Models.KhuVuc

@{
    ViewBag.Title = "EditLocation";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>EditLocation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>KhuVuc</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="id" value="@Model.MaKV"/>

        <div class="form-group">
            <label class="control-label col-md-2">Tên Khu Vực</label>
            <div class="col-md-10">
                <input class="form-control" name="TenKV" value="@Model.TenKhuVuc"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Location")
</div>
