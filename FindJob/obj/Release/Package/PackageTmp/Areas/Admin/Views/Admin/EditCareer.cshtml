@model FindJob.Models.NganhNghe

@{
    ViewBag.Title = "EditCareer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit Career</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Chuyên ngành</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="id" value="@Model.MaNganh"/>

        <div class="form-group">
            <label class="control-label col-md-2"> Tên chuyên ngành</label>
            <div class="col-md-10">

                <input class="form-control" name="TenNganh" value="@Model.TenNganh"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
