
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}


<!doctype html>
<html class="no-js" lang="zxx">

<body>

    <!-- ================ contact section start ================= -->
    <section class="contact-section">
        <div class="container">

            <div class="row">
                <div class="col-12">
                    <h2 class="contact-title">Change Password</h2>
                    @ViewBag.ThongBao
                </div>
                <div class="col-lg-12">
                    <form class="form-contact contact_form" action="" method="post">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group ">
                                    <span>Old Password</span>
                                    <input class="form-control " type="password" name="oldPW" />
                                    <span>New Password</span>
                                    <input class="form-control" type="password" name="newPW" />
                                    <span>Confim Password</span>
                                    <input class="form-control" type="password" name="CfPW" />
                                </div>
                            </div>

                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn">Change</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

</body>

</html>
